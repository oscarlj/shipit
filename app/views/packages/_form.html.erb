<%= form_for(package) do |f| %>
  <% if package.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(package.errors.count, "error") %> prohibited this package from being saved:</h2>

      <ul>
      <% package.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :shipping %>
    <%= f.date_select :shipping %>
  </div>

  <div class="field">
    <%= f.label :delivery %>
    <%= f.date_select :delivery %>
  </div>
  
  <div class="field">
    <%= f.label :status %>
    <%= f.text_field :status %>
  </div>


  <div class="field">
    <% if params[:search] %>
    <%= f.label :order %>
    <%= f.text_field :order %>
    <% end %>
  </div>


  <div class="field">
    <%= f.label :company_id %>
    <%= f.collection_select :company_id, Company.order(:name), :id, :name, include_blank: true %>
  </div>
   

  <div class="field">
    <%= f.label :office_id %>
    <%= f.grouped_collection_select :office_id, Company.order(:name), :offices,:name, :id, :name, include_blank: true %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
